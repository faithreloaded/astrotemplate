---
import '../styles/main.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderMega from '../components/header/header-mega/Header.astro';
import Footer from '../components/footer/footer-grid/Footer.astro';
---

<BaseLayout 
  title="Buttons | Astro Boilerplate" 
  description="Button system design gallery"
>
  <HeaderMega />
  
  <main class="main">
    <div class="container">
      <div class="buttons-page">
        <header class="buttons-header">
          <h1 class="buttons-title">Button System</h1>
          <p class="buttons-description">
            Three button styles for all your needs
          </p>
        </header>

        <div class="buttons-showcase">
          <div class="button-group">
            <h2>Primary</h2>
            <div class="button-examples">
              <button class="btn-primary">Get started</button>
              <button class="btn-primary">
                Log in
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </button>
            </div>
          </div>

          <div class="button-group">
            <h2>Secondary</h2>
            <div class="button-examples">
              <button class="btn-secondary">Learn more</button>
              <button class="btn-secondary learn-more-btn">Learn more</button>
            </div>
          </div>

          <div class="button-group">
            <h2>Link</h2>
            <div class="button-examples">
              <a href="#" class="btn-link">Learn more</a>
              <div class="link-variant">
                <span class="link-variant-label">Link Blue</span>
                <a href="#" class="btn-link-blue">Read more →</a>
              </div>
            </div>
          </div>
        </div>

        <div class="states-showcase">
          <h2>States</h2>
          <div class="states-examples">
            <button class="btn-primary">Normal</button>
            <button class="btn-primary hover-demo">Hover me</button>
            <button class="btn-primary active-demo">Active</button>
          </div>
        </div>

        <div class="dark-showcase">
          <h2>Dark Variants</h2>
          <p class="dark-description">For dark backgrounds</p>
          <div class="dark-buttons">
            <div class="dark-group">
              <h3>Primary Dark</h3>
              <button class="btn-primary-dark">Get started</button>
            </div>
            <div class="dark-group">
              <h3>Secondary Dark</h3>
              <button class="btn-secondary-dark">Learn more</button>
            </div>
            <div class="dark-group">
              <h3>Link Dark</h3>
              <a href="#" class="btn-link-dark">Learn more</a>
            </div>
            <div class="dark-group">
              <h3>Link Dark Text</h3>
              <a href="#" class="btn-link-dark-text">Read more →</a>
            </div>
          </div>
        </div>

        <div class="specs-showcase">
          <h2>Specifications</h2>
          <div class="specs-inline">
            <span>Padding: 12px 22px</span>
            <span>Border Radius: 6px</span>
            <span>Font: Inter 14px</span>
            <span>Weight: 500</span>
            <span>Transition: 0.2s ease</span>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .buttons-page {
    padding: var(--space-6) 0;
    max-width: 1000px;
    margin: 0 auto;
  }

  .buttons-header {
    text-align: center;
    margin-bottom: var(--space-6);
  }

  .buttons-title {
    font-size: 42px;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 var(--space-2) 0;
  }

  .buttons-description {
    font-size: 18px;
    color: var(--color-gray);
    margin: 0;
  }

  .buttons-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .button-group {
    background: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    padding: var(--space-5);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .button-group h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 var(--space-4) 0;
    text-align: center;
  }

  .button-examples {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    align-items: center;
    justify-content: center;
  }

  .link-variant {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
  }

  .link-variant-label {
    font-size: 16px;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 var(--space-2) 0;
  }

  .states-showcase {
    background: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    padding: var(--space-5);
    margin-bottom: var(--space-6);
  }

  .states-showcase h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 var(--space-4) 0;
    text-align: center;
  }

  .states-examples {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .dark-showcase {
    background: linear-gradient(135deg, #1f2937, #374151);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--space-5);
    margin-bottom: var(--space-6);
  }

  .dark-showcase h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-white);
    margin: 0 0 var(--space-2) 0;
    text-align: center;
  }

  .dark-description {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 0 var(--space-4) 0;
    text-align: center;
  }

  .dark-buttons {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: var(--space-4);
  }

  .dark-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .dark-group h3 {
    font-size: 14px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    text-align: center;
  }



  .specs-showcase {
    background: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    padding: var(--space-5);
  }

  .specs-showcase h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 var(--space-4) 0;
    text-align: center;
  }

  .specs-inline {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .specs-inline span {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-gray);
    background: rgba(0, 0, 0, 0.05);
    padding: 6px 12px;
    border-radius: 6px;
  }

  /* Flecha para botón Learn More */
  .learn-more-btn::after {
    content: " →";
    transition: transform 0.2s ease;
  }

  .learn-more-btn:hover::after {
    transform: translateX(2px);
  }

  /* Demo de hover */
  .hover-demo:hover {
    background-color: rgba(0, 0, 0, 0.8);
    transform: translateY(-1px);
  }

  /* Demo de active */
  .active-demo:active {
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .buttons-page {
      padding: var(--space-4) 0;
    }

    .buttons-title {
      font-size: 32px;
    }

    .buttons-showcase {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .button-examples {
      flex-direction: column;
    }

    .dark-buttons {
      grid-template-columns: 1fr 1fr;
    }

    .states-examples {
      flex-direction: column;
      align-items: center;
    }

    .specs-inline {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
