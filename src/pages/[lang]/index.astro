---
import '../../styles/main.css';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderMega from '../../components/header/header-mega/Header.astro';
import FooterGrid from '../../components/footer/footer-grid/Footer.astro';
import HeroSplitImageRight from '../../components/hero/split-image-right/Hero.astro';
import PricingModern from '../../components/pricing/modern/PricingModern.astro';
import VideoDemo from '../../components/features/video-demo/VideoDemo.astro';
import '../../components/services/simple-cards/ServicesSimpleCards.css';
import { LOCALES, type Locale, loadT } from '../../i18n';
import HomeHero from '../../components/hero/home-hero/HomeHero.astro';
import FAQListCenter from '../../components/faq/list-center/FAQ.astro';

export async function getStaticPaths() {
  return (LOCALES as readonly string[]).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = await loadT(lang);
---

<BaseLayout 
  title={`${lang === 'es' ? 'Inicio' : 'Home'} | Starter UI`} 
  description="A minimal Astro boilerplate with ready-to-use sections like Hero, FAQ, and Testimonials. Build fast, clean websites with ease."
>
  <HeaderMega lang={lang} />
  
  <main class="main">
    <HomeHero />
    
    <VideoDemo 
      title={t('home.video1.title')}
      description={t('home.video1.description')}
    />
    
    <VideoDemo 
      title={t('home.video2.title')}
      description={t('home.video2.description')}
    />
    
    <VideoDemo 
      title={t('home.video3.title')}
      description={t('home.video3.description')}
    />
    
    <PricingModern 
      title={t('home.pricing.title')}
      description={t('home.pricing.description')}
      planName={t('home.pricing.planName')}
      price={t('home.pricing.price')}
      currency={t('home.pricing.currency')}
      features={[
        t('home.pricing.features.0'),
        t('home.pricing.features.1'),
        t('home.pricing.features.2'),
        t('home.pricing.features.3')
      ]}
      buttonText={t('home.pricing.buttonText')}
      buttonHref="#"
      showHeader={true}
    />

    <FAQListCenter
      pill={t('homeFaq.pill')}
      title={t('homeFaq.title')}
      items={[
        { question: t('homeFaq.q1.question'), answer: t('homeFaq.q1.answer') },
        { question: t('homeFaq.q2.question'), answer: t('homeFaq.q2.answer') },
        { question: t('homeFaq.q3.question'), answer: t('homeFaq.q3.answer') },
        { question: t('homeFaq.q4.question'), answer: t('homeFaq.q4.answer') }
      ]}
    />
  </main>
  
  
  <FooterGrid 
    description={t('footer.description')}
    linksTitle={t('footer.linksTitle')}
    links={[
      { label: t('header.nav.home'), href: `/${lang}/` },
      { label: t('header.nav.components'), href: `/${lang}/components` },
      { label: t('header.nav.globalStyles'), href: `/${lang}/global-styles` },
      { label: t('header.nav.docs'), href: `/${lang}/docs` },
      { label: 'Blog', href: `/${lang}/blog` }
    ]}
    legalTitle={t('footer.legalTitle')}
    legalLinks={[
      { label: t('footer.privacy'), href: `/${lang}/privacy` },
      { label: t('footer.legal'), href: `/${lang}/legal` }
    ]}
    contactTitle={t('footer.contactTitle')}
    contactEmail={lang==='es' ? 'info@ejemplo.com' : 'info@example.com'}
    contactPhone={lang==='es' ? '+34 600 000 000' : '+1 (555) 123-4567'}
    contactLocation={lang==='es' ? 'Madrid, EspaÃ±a' : 'New York, USA'}
    creditLine1={t('footer.credit1')}
    creditLine2={t('footer.credit2')}
    creditUrl="https://example.com"
  />
</BaseLayout>

