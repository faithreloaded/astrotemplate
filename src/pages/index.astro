---
import '../styles/main.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import HeaderMega from '../components/header/header-mega/Header.astro';
import FooterGrid from '../components/footer/footer-grid/Footer.astro';
import HeroSplitImageRight from '../components/hero/split-image-right/Hero.astro';
import PricingModern from '../components/pricing/modern/PricingModern.astro';
import VideoDemo from '../components/features/video-demo/VideoDemo.astro';
import '../components/services/simple-cards/ServicesSimpleCards.css';
---

<BaseLayout 
  title="Home | Starter UI" 
  description="A minimal Astro boilerplate with ready-to-use sections like Hero, FAQ, and Testimonials. Build fast, clean websites with ease."
>
  <HeaderMega />
  
  <main class="main">
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <span class="pill">New</span>
            <h1 class="hero-title">Code less, build faster.</h1>
            <p class="hero-description">A clean component kit for developers who want speed and good taste.</p>
            <div class="hero-cta-container">
              <a href="#" class="btn btn-primary">Get started</a>
              <a href="#" class="btn btn-secondary">View components</a>
            </div>
          </div>
          
          <div class="hero-image">
            <article class="simple-servicio-card animate">
              <img class="simple-card-bg" src="/images/images/placeholder/placeholder.jpg" alt="Premium Components" />
              <div class="simple-card-overlay-bottom">
                <div class="simple-card-row">
                  <h4 class="simple-card-heading">Premium Components</h4>
                  <div class="simple-price-pill">199€</div>
                </div>
                <p class="simple-card-description">Access to our complete library of clean, responsive components with lifetime updates</p>
                <div class="simple-card-tags">
                  <span class="simple-tag">Components</span>
                  <span class="simple-tag">Lifetime</span>
                </div>
                <button class="simple-card-cta">Get Started</button>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>
    
    <VideoDemo 
      title="Build a landing in minutes."
      description="See how Starter UI lets you spin up a clean landing page in less than 5 minutes. No fluff, just production-ready components you can drop and ship."
    />
    
    <VideoDemo 
      title="Change one token, change it all."
      description="Update your brand colors once and watch the entire design adapt instantly. Starter UI is built on simple global tokens — no messy overrides."
    />
    
    <VideoDemo 
      title="From idea to shipped component."
      description="Starter UI gives you clean, reusable components you can trust. Focus on your app, not reinventing buttons or layouts."
    />
    
    <PricingModern 
      title="Pay once, use forever."
      description="Simple licensing for developers."
      planName="Starter UI"
      price="199"
      currency="€"
      features={[
        "Clean, responsive components",
        "Global design tokens", 
        "Easy to customize CSS",
        "Lifetime updates included"
      ]}
      buttonText="Buy now on Gumroad"
      buttonHref="#"
      showHeader={true}
    />
  </main>
  
  <FooterGrid />
</BaseLayout>

<style>
  /* Hero Section Styles */
  .hero-section {
    padding: var(--space-8) 0 var(--space-7) 0;
    background: transparent;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease;
  }
  
  .hero-section.animate {
    opacity: 1;
    transform: translateY(0);
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-7);
    align-items: center;
    min-height: 500px;
  }
  
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: flex-start;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
    transition-delay: 0.1s;
  }
  
  .hero-section.animate .hero-text {
    opacity: 1;
    transform: translateY(0);
  }
  
  .pill {
    display: inline-block;
    background: var(--color-container);
    color: var(--color-text-secondary);
    padding: 8px 16px;
    border-radius: var(--radius-full);
    font-size: 14px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.5px;
  }
  
  .hero-title {
    font-size: 56px;
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  
  .hero-description {
    font-size: 20px;
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
  }
  
  .hero-cta-container {
    display: flex;
    gap: 16px;
    align-items: center;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 400;
    text-decoration: none;
    transition: all 0.15s ease;
    border: none;
    cursor: pointer;
  }
  
  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-background);
  }
  
  .btn-primary:hover {
    background-color: rgba(0, 0, 0, 0.8);
    transform: translateY(-1px);
  }
  
  .btn-secondary {
    background-color: transparent;
    color: var(--color-text);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .btn-secondary:hover {
    background-color: var(--color-container);
    transform: translateY(-1px);
  }
  
  /* Hero Image con Service Card */
  .hero-image {
    background: var(--color-container);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    height: 100%;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
    transition-delay: 0.2s;
  }
  
  .hero-section.animate .hero-image {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Service Card exacta del componente SimpleServiceCards */
  .hero-image .simple-servicio-card {
    width: 100%;
    max-width: 350px;
    min-height: 400px;
    margin: 0;
  }
  
  /* Mantener la interacción de hover original */
  .hero-image .simple-card-overlay-bottom {
    bottom: -60px; /* Escondido por defecto como en el componente original */
  }
  
  .hero-image .simple-servicio-card:hover .simple-card-overlay-bottom {
    bottom: 0; /* Aparece al hacer hover */
  }
  
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--space-5);
      min-height: auto;
    }
    
    .hero-title {
      font-size: 48px;
      line-height: 56px;
    }
    
    .hero-description {
      font-size: 18px;
      line-height: 30px;
    }
    
    .hero-image {
      order: -1;
      padding: 24px;
    }
    
    .hero-service-card {
      padding: 24px;
    }
  }
</style>

<script>
  // Animaciones del Hero Section
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, observerOptions);

    // Observar la sección hero
    const heroSection = document.querySelector('.hero-section');
    if (heroSection) {
      observer.observe(heroSection);
    }
  });
</script>