---
import './HeroWithBackground.css';
---

<section class="hero-with-background">
  <div class="hero-bg-overlay"></div>
  <div class="hero-bg-image">
    <img src="/images/images/placeholder/placeholder.jpg" alt="Background" class="hero-bg-img" loading="lazy" />
  </div>
  
  <div class="hero-with-bg-container">
    <div class="hero-with-bg-content">
      <!-- Banner de anuncio -->
      <div class="pill-outline-hero">
        <span class="hero-with-bg-banner-text">
          Lorem ipsum dolor. 
          <a href="#" class="btn-link-dark-text">Read more →</a>
        </span>
      </div>
      
      <!-- Título principal -->
      <h1 class="hero-with-bg-title">
        Lorem ipsum dolor sit amet consectetur
      </h1>
      
      <!-- Descripción -->
      <p class="hero-with-bg-description">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.
      </p>
      
      <!-- Botones de acción -->
      <div class="hero-with-bg-actions">
        <button class="btn-primary-dark">
          Get started
        </button>
        <a href="#" class="btn-link-dark">
          Learn more
        </a>
      </div>
    </div>
  </div>
</section>
