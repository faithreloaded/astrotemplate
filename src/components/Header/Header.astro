---
import "./Header.css";
---

<header class="luxury-header">
  <div class="container">
    <div class="header-content">
      <!-- Left side - Menu button -->
      <div class="header-left">
        <button class="menu-button" id="menu-toggle">
          <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>
          <span class="menu-text">Menu</span>
        </button>
      </div>

      <!-- Center - Logo -->
      <div class="header-center">
        <a href="/" class="logo-link">
          <img src="/images/logo.svg" alt="Insider Events" class="logo-img" />
        </a>
      </div>

      <!-- Right side - Contact button -->
      <div class="header-right">
        <a href="/contact" class="contact-button">
          Contact
        </a>
      </div>
    </div>
    
    <!-- Slide Menu Overlay -->
    <div class="menu-overlay" id="menu-overlay"></div>
    
    <!-- Slide Menu -->
    <div class="slide-menu" id="slide-menu">
      <div class="slide-menu-content">
        <div class="slide-menu-header">
          <h2 class="menu-title">Menu</h2>
          <button class="close-button" id="close-button">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"/>
              <line x1="6" y1="6" x2="18" y2="18"/>
            </svg>
          </button>
        </div>
        
        <nav class="slide-menu-nav">
          <ul class="menu-list">
            <li class="menu-item"><a href="/" class="menu-link">Home</a></li>
            <li class="menu-item"><a href="/about" class="menu-link">About</a></li>
            <li class="menu-item"><a href="/corporate-events" class="menu-link">Corporate Events & Incentives</a></li>
            <li class="menu-item"><a href="/crafted-experiences" class="menu-link">Crafted Experiences</a></li>
            <li class="menu-item"><a href="/concierge" class="menu-link">Concierge</a></li>
            <li class="menu-item"><a href="/contact" class="menu-link">Contact</a></li>
          </ul>
        </nav>

        <div class="slide-menu-footer">
          <div class="contact-info">
            <p class="contact-email">hello@insidersevents.com</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const slideMenu = document.getElementById('slide-menu');
  const menuOverlay = document.getElementById('menu-overlay');
  const closeButton = document.getElementById('close-button');

  function closeMenu() {
    slideMenu.classList.remove('open');
    menuOverlay.style.display = 'none';
    document.body.style.overflow = '';
  }

  function openMenu() {
    slideMenu.classList.add('open');
    menuOverlay.style.display = 'block';
    document.body.style.overflow = 'hidden';
  }

  if (menuToggle && slideMenu && menuOverlay && closeButton) {
    menuToggle.addEventListener('click', () => {
      if (slideMenu.classList.contains('open')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    closeButton.addEventListener('click', closeMenu);
    menuOverlay.addEventListener('click', closeMenu);

    // Close menu when clicking on links
    const menuLinks = slideMenu.querySelectorAll('.menu-link');
    menuLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  }
</script>
