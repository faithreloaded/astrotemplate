---
import './Hero.css';
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-images">
        <div class="hero-image-grid">
          <div class="hero-image-large">
            <img src="/images/placeholder.jpg" alt="Team member" class="hero-img" loading="lazy" />
          </div>
          <div class="hero-image-small">
            <img src="/images/placeholder.jpg" alt="Team member" class="hero-img" loading="lazy" />
          </div>
          <div class="hero-image-small">
            <img src="/images/placeholder.jpg" alt="Team member" class="hero-img" loading="lazy" />
          </div>
        </div>
      </div>
      
      <div class="hero-text">
        <span class="hero-pill">Work for us</span>
        <h1 class="hero-title">Discover how far you can go</h1>
        <p class="hero-description">Reach new levels of career success by joining a team that works together to go beyond expectations.</p>
        <button class="hero-cta btn-primary">See open jobs</button>
      </div>
    </div>
  </div>
</section>
